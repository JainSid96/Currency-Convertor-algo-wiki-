<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddhantjain.currencyconvertor.MainActivity">
    android:background="@drawable/">

    <TextView
        android:id="@+id/textView"
        android:layout_width="301dp"
        android:layout_height="124dp"
        android:text=" Currency Convertor"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="34dp"
        tools:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/s1"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/t1"
        android:layout_width="237dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter Amount (â‚¹)"
        android:inputType="phone"
        tools:layout_editor_absoluteX="11dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/t2"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Converted Amont"
        android:inputType="phone"
        tools:layout_editor_absoluteX="11dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/t1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="327dp"
        android:layout_height="138dp"
        android:layout_marginTop="18dp"
        android:contentDescription="CONVERT"
        android:onClick="click"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:srcCompat="@drawable/currency"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="141dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="CONVERT"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.481" />

</android.support.constraint.ConstraintLayout>
